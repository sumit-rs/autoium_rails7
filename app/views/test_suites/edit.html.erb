<%
  breadcrumb = {'Home': root_url, 'Environments' => environments_url, 'Test Suites' => environment_test_suites_url(@environment), 'Edit Suite' => '#' }
  btns = []
%>
<%= render partial: 'common/breadcrumb', locals: {heading: 'Manage Test Suites', breadcrumb: breadcrumb, action_btns: btns} %>
<section class="section min-vh-100">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <p class="card-title">Environment: <%= @environment.name %></p>
          <div class="mt-3">
            <%= render partial: 'test_suites/form' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>