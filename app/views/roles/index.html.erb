<%
  breadcrumb = {'Home': root_url, 'Manage Projects' => projects_url, 'Project Role' => '#' }
  btn = [{name: 'Create Role', url: new_project_role_path(@project), class: 'btn btn-primary rounded-pill btn-sm float-right'}]
%>
<%= render partial: 'common/breadcrumb', locals: {heading: "Manage Project Role", breadcrumb: breadcrumb, action_btns: btn} %>

<section class="section min-vh-100">
  <%= render partial: 'layouts/flash_message' %>

  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <p class="card-title">Project: <%= @project.name %></p>
          <!-- Table with stripped rows -->
          <table class="table mt-2">
            <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Assigned</th>
              <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            <% if @roles %>
              <% @roles.each do |role| %>
                <tr>
                  <td><%= role.name  %></td>
                  <td><%= role.assign_team_members.collect(&:email) if role.assign_team_members.present?  %></td>
                  <td>
                    <%= link_to(edit_project_role_path(@project, role), title: 'Edit Project Access Role') do %>
                      <i class="bi bi-pencil-fill"></i>
                    <% end %>

                    <%= link_to(project_role_path(@project, role), method: :delete, data: {confirm: 'Are you sure?'}, title: 'Delete Project') do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% end %>
            </tbody>
          </table>
          <!-- End Table with stripped rows -->

        </div>
      </div>

    </div>
  </div>
</section>