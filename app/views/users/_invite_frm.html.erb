<div class="card">
  <div class="card-body">
    <h5 class="card-title"></h5>
    <%= form_with model: User, url: invite_users_path, data: { turbo: false } do |f| %>

      <div class="row g-3">
        <div class="col-md-3">
          <label class="form-label fw-bold" for="user_first_name">First Name*:</label>
          <%= f.text_field :first_name, class: "form-control #{error_class(@user, :first_name)}" %>
        </div>

        <div class="col-md-3">
          <label class="form-label fw-bold" for="user_last_name">Last Name*:</label>
          <%= f.text_field :last_name, class: "form-control #{error_class(@user, :last_name)}" %>
        </div>

        <div class="col-md-3">
          <label class="form-label fw-bold" for="user_email">Email*:</label>
          <%= f.email_field :email, class: "form-control #{error_class(@user, :email)}" %>
        </div>

        <div class="col-md-3 mt-5">
          <%= f.submit "Send Invitation", class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>