<%
  breadcrumb = {'Home': root_url, 'Environments' => environments_url,'Test Suites' => environment_test_suites_path(@environment), 'Automate Test Cases' => environment_test_suite_manual_test_cases_path(@environment, @test_suite) }
  btns = []
%>
<%= render partial: 'common/breadcrumb', locals: {heading: 'Edit Automate Test Case', breadcrumb: breadcrumb, action_btns: btns} %>
<section class="section min-vh-100">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <p class="card-title">Environment: <%= @environment.name %></p>
          <div class="mt-3">
            <% if @test_case.field_type == 'SELENIUM_CODE' %>
              <%= render partial: 'test_cases/selenium_frm' %>
            <% else %>
              <%= render partial: 'test_cases/form' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>