<%
  breadcrumb = {'Home': root_url, 'Environments' => environments_url, 'Test Plans' => environment_test_plans_url(@environment) }
  btns = []
%>
<%= render partial: 'common/breadcrumb', locals: {heading: 'Manage Test Plans', breadcrumb: breadcrumb, action_btns: btns} %>
<section class="section min-vh-100">
  <div class="row">
    <div class="col-lg-12">

      <div class="card">
        <div class="card-body">
          <p class="card-title">Environment: <%= @environment.name %></p>
          <div class="mt-3">
            <%= render partial: 'test_plans/form' %>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>